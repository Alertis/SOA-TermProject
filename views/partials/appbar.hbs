                </div>
              </form>
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="panel-body">
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="row">
                    <div class="col-xs-10 col-md-11">
                      <div class="comment-text">
                        {{district.comments}}
                      </div>

                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--Real Estate Component -->
  <div class="tab-pane fade" id="realestate" role="tabpanel" aria-labelledby="realestate-tab">
    <div>

      <div class="container">
        <div class="row row-header d-flex justify-content-center align-items-center">
          <h3 style="text-align: center;" class="text-white ">Average Home Prices and tax rate</h3>
        </div>
        <div class="row realestate-values">
          <div class="col-md-6 col-12 d-flex justify-content-around align-items-center">
            <div>
              <ion-icon style="font-size: 40px;" name="home"></ion-icon>
            </div>
            <div class="home-values">
              <h3>Average Home value</h3>
              <p>{{district.realEstate.rent}}</p>
            </div>

          </div>
          <div class="col-md-6 col-12 d-flex justify-content-around align-items-center">
            <div>
              <ion-icon style="font-size: 40px;" name="wallet"></ion-icon>
            </div>
            <div class="tax-rates">

              <h3>Tax rates</h3>
              <p>{{district.tax}}$</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--Crime Component -->

