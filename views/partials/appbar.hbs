<div class="tab-content" id="myTabContent">
  <!--Overview Component -->
  <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
    <div>
      <div class="container mt-3">
        <div class="row row-header d-flex justify-content-center align-items-center">
          <h3 style="text-align: center;" class="text-white ">540 Total Statistic,45 alert found</h3>
        </div>
        <table class="detail-table" id="table" data-toggle="table" data-flat="true" data-search="true">
          <thead>
            <tr>
              <th data-sortable="true">
                <ion-icon name="home"></ion-icon>Real Estate
              </th>
              <th data-sortable="true">
                <ion-icon name="lock"></ion-icon>Crime
              </th>
              <th data-sortable="true">
